<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RuIfmaMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500_withe</item>
        <item name="colorPrimaryVariant">@color/purple_700_withe</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200_withe</item>
        <item name="colorSecondaryVariant">@color/teal_700_withe</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <color name="colorCard">#FFFFFF</color>
    <color name="titleColor">#ffffffff</color>
    <color name="layout">@color/teal_700_withe</color>
    <color name="layout2">@color/purple_500_withe</color>

    <style name="Theme.RuIfmaMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RuIfmaMobile.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RuIfmaMobile.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
</resources>